{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
