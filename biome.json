{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!bts.jsonc",
      "!**/.source",
      "!**/index.css",
      "!**/.intlayer",
      "!**/*.js"
    ]
  },
  "extends": ["ultracite", "ultracite/core"],
  "javascript": {
    "globals": ["figma", "__html__"]
  },
  "linter": {
    "rules": {
      "nursery": {
        "noReactForwardRef": "off",
        "useMaxParams": "off",
        "noShadow": "off",
        "useSortedClasses": {
          "level": "warn",
          "options": {
            "attributes": ["classList"],
            "functions": ["clsx", "cn", "cva", "tw", "tw.*"]
          }
        }
      },
      "style": {
        "noHeadElement": "off",
        "useFilenamingConvention": "off",
        "useConsistentTypeDefinitions": "off",
        "useUnifiedTypeSignatures": "off",
        "noMagicNumbers": "off",
        "noNamespace": "off"
      },
      "performance": {
        "noNamespaceImport": "off",
        "noBarrelFile": "off",
        "noImgElement": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "useAwait": "off",
        "noUnknownAtRules": "off",
        "noDocumentCookie": "off",
        "noConsole": {
          "level": "info",
          "options": {
            "allow": ["warn", "info", "error"]
          }
        }
      },
      "correctness": {
        "noUnknownTypeSelector": "off"
      },
      "a11y": {
        "useSemanticElements": "off",
        "noNoninteractiveElementInteractions": "off",
        "useKeyWithMouseEvents": "off",
        "useKeyWithClickEvents": "off"
      }
    }
  }
}
