{
  "name": "tiny-svg",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "check-types": "pnpm -r check-types",
    "dev:web": "pnpm --filter @tiny-svg/web dev",
    "dev:figma": "pnpm --filter @tiny-svg/figma-plugin dev",
    "build:figma": "pnpm --filter @tiny-svg/figma-plugin build",
    "build:packages": "pnpm --filter './packages/*' build"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@types/node": "^22.13.11",
    "husky": "^9.1.7",
    "tsdown": "^0.16.7",
    "ultracite": "6.0.0"
  },
  "packageManager": "pnpm@10.14.0"
}
